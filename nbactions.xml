<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-tree</actionName>
            <displayName>tree</displayName>
            <goals>
                <goal>dependency:tree</goal>
                <goal>-DoutputType=graphml</goal>
                <goal>-DoutputFile=dependency.graphml</goal>
            </goals>
        </action>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath cz.incad.vdkcommon.solr.Indexer "org.postgresql.Driver" "jdbc:postgresql://localhost:5432/vdk" "vdk" "vdk"</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath cz.incad.vdkcommon.solr.Indexer "org.postgresql.Driver" "jdbc:postgresql://localhost:5432/vdk" "vdk" "vdk"</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath cz.incad.vdkcommon.solr.Indexer "org.postgresql.Driver" "jdbc:postgresql://localhost:5432/vdk" "vdk" "vdk"</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
